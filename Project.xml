<?xml version="1.0" encoding="utf-8"?>
<project>
	<app title="app do JoseXD2" file="teste" packageName="com.josexd2.teste" package="com.josexd2.sample" main="Main" version="1.0" company="jose" />

	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />

	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false" allow-shaders="true" require-shaders="true"/>

	<window if="mobile" orientation="landscape" fullscreen="true" width="1280" height="720" resizable="false" allow-shaders="true" require-shaders="true"/>

        <set name="BUILD_DIR" value="export"/>

	<classpath name="source" />
	<classpath name="assets" />
	
	<haxelib name="flixel" />
	
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="HXCPP_CHECK_POINTER" />
	<haxedef name="HXCPP_STACK_LINE" />
</project>
